<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.elementa.client.resources.AppResources"/>

    <g:HTMLPanel>
    
    	<header class="{res.theme.Light1} {res.w3.CellRow} {res.w3.Center}">
    		<div class="{res.w3.Cell} {res.w3.Left} {res.w3.CellTop}">
				<g:Label ui:field="openNav"
					addStyleNames="{res.w3.Button} {res.theme.Light1} {res.w3.Xlarge}">
					&#9776;	
				</g:Label>
			</div>
				
			<h1 class="{res.theme.TextTheme}">Elementa</h1>
		</header>

        <g:FlowPanel addStyleNames="{res.w3.Card4} {res.w3.Margin} {res.theme.Light5}">
	
		
			<g:FlowPanel ui:field="titlePanel" addStyleNames="{res.w3.Container} {res.theme.Light2}">
				<g:Label ui:field="title" addStyleNames="{res.w3.Xxlarge}">
					Hello!
				</g:Label>
			</g:FlowPanel>
			
			<g:SimplePanel ui:field="messenger" />
			
			<g:FlowPanel addStyleNames="{res.w3.Container} {res.w3.Padding} {res.theme.Light5}"
				ui:field="contentPanel">
			</g:FlowPanel>
		
	
		</g:FlowPanel>
		
		<footer class="{res.w3.Container} {res.theme.Light1} {res.w3.Center}">
				<h1 class="{res.theme.TextTheme}">&#169; Jake Shilling 2017</h1>
			</footer>
        
    </g:HTMLPanel>
</ui:UiBinder>
