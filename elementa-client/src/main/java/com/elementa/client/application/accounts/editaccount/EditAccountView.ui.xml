<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.elementa.client.resources.AppResources"
		field="res">
	</ui:with>

	<g:FocusPanel ui:field="focus">
		<g:HTMLPanel>
			<g:SimplePanel ui:field="accountInformation" />
			
			<g:HTMLPanel ui:field="passwords" styleName="{res.w3.Container}">
				<div class="{res.w3.Section}">
					<g:Label styleName="{res.theme.TextTheme}" ui:field="newPasswordLbl" />
					<g:SimplePanel ui:field="newPasswordTxtBox" />
				</div>
				<div class="{res.w3.Section}">
					<g:Label styleName="{res.theme.TextTheme}" ui:field="confirmPasswordLbl" />
					<g:SimplePanel ui:field="confirmPasswordTxtBox" />
				</div>
			</g:HTMLPanel>
			
			<g:SimplePanel ui:field="prefContainer" />
			
			<div class="{res.w3.Section}">
			
				<div class ="{res.w3.CellRow}">
					<g:SimplePanel ui:field="deleteBtnContainer" addStyleNames="{res.w3.Cell} {res.w3.Margin} {res.w3.Left}"/>
					<g:SimplePanel ui:field="saveBtnContainer" addStyleNames="{res.w3.Cell} {res.w3.Margin} {res.w3.Right}" />
				</div>
			</div>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 